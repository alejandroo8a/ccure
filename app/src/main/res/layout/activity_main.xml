<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    tools:context="arenzo.alejandroochoa.ccure.main">

    <TextView
        android:id="@+id/txtFechaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="22-04-2017 12:23:16"
        android:layout_marginRight="8dp"
        fontPath="fonts/Roboto-Bold.ttf"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favor de pasar la tarjeta por el lector para iniciar sesión"
        fontPath="fonts/Roboto-Bold.ttf"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaLogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imvRFIDLogin"
        android:layout_width="286dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/im_rfid"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnOlvideTarjetaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvidé mi tarjeta"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imvRFIDLogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
