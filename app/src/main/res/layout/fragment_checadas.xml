<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arenzo.alejandroochoa.ccure.checadas">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="338dp"
        android:layout_height="218dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/custom_border"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintDatos"
        android:id="@+id/constraintRfid">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="88dp"
            app:srcCompat="@drawable/im_rfid"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edtNumeroEmpleado"
            android:layout_width="304dp"
            android:layout_height="31dp"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="Numero"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            tools:layout_editor_absoluteY="171dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Empleado"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de entradas y salidas."
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="304dp"
        android:layout_height="159dp"
        android:background="@drawable/custom_border"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintModo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/constraintRfid"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.111">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/cuadro_verde"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">


        </LinearLayout>

        <TextView
            android:id="@+id/txtNombreTrabajador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:text="MORA LOPEZ LUIS"
            app:layout_constraintBottom_toTopOf="@+id/txtTarjetaEmpleado"
            app:layout_constraintLeft_toRightOf="@+id/imEmpleado" />

        <TextView
            android:id="@+id/txtTarjetaEmpleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:text="No. Tarjeta: 9407653"
            app:layout_constraintBottom_toTopOf="@+id/txtCuentaEmpleado"
            app:layout_constraintLeft_toRightOf="@+id/imEmpleado" />

        <TextView
            android:id="@+id/txtCuentaEmpleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="No. Empleado: 8785"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imEmpleado" />

        <ImageView
            android:id="@+id/imEmpleado"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_card" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintModo"
        android:layout_width="202dp"
        android:layout_height="92dp"
        android:background="@drawable/custom_border"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnCambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Cambiar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtModo" />

        <TextView
            android:id="@+id/txtModo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo: ENTRADA"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintDatos"
        android:layout_width="443dp"
        android:layout_height="92dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_border"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/constraintModo"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtPuerta"
            android:layout_width="323dp"
            android:layout_height="28dp"
            android:layout_marginBottom="-1dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="Puerta en la que estÃ¡"
            android:inputType="textPersonName"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtGuardia" />

        <EditText
            android:id="@+id/edtGuardia"
            android:layout_width="323dp"
            android:layout_height="28dp"
            android:background="@drawable/borde"
            android:ems="10"
            android:hint="Nombre del guardia"
            android:inputType="textPersonName|textVisiblePassword"
            android:singleLine="true"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardia"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puerta"
            android:layout_marginLeft="34dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
